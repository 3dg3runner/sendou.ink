{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "dev:remix": "remix watch",
    "dev:server": "cross-env NODE_ENV=development node server/index.js",
    "dev": "concurrently \"npm run dev:remix\" \"npm run dev:server\"",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "migration:create": "npx prisma migrate dev --create-only",
    "migration:apply:dev": "npx prisma migrate dev",
    "migration:apply:prod": "npx prisma migrate deploy",
    "seed": "npx prisma db seed",
    "seed:reset": "npx prisma migrate reset --force",
    "lint:styles": "stylelint \"**/*.css\"",
    "cy:open": "npx cypress open",
    "cy:run": "npx cypress run"
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "@remix-run/express": "^1.0.4",
    "@remix-run/react": "^1.0.4",
    "classnames": "^2.3.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.4",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.4",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.4.0",
    "faker": "^5.5.3",
    "prisma": "^3.5.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "prisma": {
    "seed": "node --experimental-specifier-resolution=node --loader ts-node/esm prisma/seed.ts"
  }
}
